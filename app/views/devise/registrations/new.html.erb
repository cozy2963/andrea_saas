<div class="row">
  <div class="col-md-6 col-md-offset-3"></div>
    <% if params[:plan] == '2' %>
    <h1 class="text-center">Pro Account</h1>
    <h5 class="text-center">Sign up for the pro accound for $10/month and get access to the community as well as contact information.</h5>
    <% else %>
    <h1 class="text-center">Basic Account</h1>
    <h5 class="text-center">Sign up for free to get basic access to the community.<h5>
    <% end %>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <h2>Sign up</h2>
      
     <% if params[:plan] == '2' %>
       <%= render "pro_form" %>
     <% else %>
       <%= render "basic_form" %>
     <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
